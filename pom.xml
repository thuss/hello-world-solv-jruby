    <version>1283893728</version>
    <name>hello-world-jruby</name>
    <packaging>jar</packaging>
    <url>www.codingkata.org</url>

    <parent>
        <groupId>org.codingkata</groupId>
        <artifactId>parent-solv</artifactId>
        <version>1.5.0</version>
    </parent>

    <repositories>
        <repository>
            <id>codingkata-release</id>
            <url>http://codingkata.org/repo/release</url>
        </repository>
    </repositories>

    <pluginRepositories>
        <pluginRepository>
            <id>saumya</id>
            <url>http://mojo.saumya.de</url>
        </pluginRepository>
    </pluginRepositories>

    <dependencies>

        <dependency>
            <groupId>org.codingkata.unit</groupId>
            <artifactId>hello-world-task</artifactId>
            <version>${kata.version}</version>
        </dependency>

        <dependency>
            <groupId>org.jruby</groupId>
            <artifactId>jruby-complete</artifactId>
            <version>${language.version}</version>
        </dependency>

        <!-- TEST -->
        <dependency>
            <groupId>org.codingkata.unit</groupId>
            <artifactId>common-test</artifactId>
            <scope>test</scope>
        </dependency>

    </dependencies>

    <build>
        <sourceDirectory>src/main/code</sourceDirectory>
        <testSourceDirectory>src/test/code</testSourceDirectory>

        <resources>
            <resource>
                <directory>${project.basedir}/src/main/code</directory>
            </resource>
        </resources>

        <plugins>
        <!-- Attempt #1: using jruby-maven-plugin
                         (http://github.com/mkristian/jruby-maven-plugins)
             This plugin is supposed to compile all .rb files to .class.

             => RuntimeException, no .class is found/compiled in the JAR
                (checked with 'http://java.decompiler.free.fr/')
                Contacted author, he doesn't know why either. He claims it
                works on Linux (I run Win).
        -->
            <plugin>
                <groupId>de.saumya.mojo</groupId>
                <artifactId>jruby-maven-plugin</artifactId>
                <version>0.20.0</version>
                <configuration>
                    <generateJava>true</generateJava>
                    <rubyDirectory>src/main/code</rubyDirectory>
                </configuration>
                <executions>
                    <execution>
                        <phase>generate-sources</phase>
                        <goals>
                            <goal>compile</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>

        <!-- Attempt #2: calling jruby via Ant
            Which class to use for compiling?
